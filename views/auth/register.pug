extends ../layout

block content
    div(class="row")
        div(class="col-md-6 col-md-offset-3")
            div(class="panel panel-default")
                div(class="panel-heading")= title
                form(action="/register", method="POST")
                    div(class="panel-body")
                        if err_code
                            div(class="alert alert-danger")
                                if err_code === '1'
                                    p Proszę uzupełnić wszystkie pola.
                                if err_code === '2'
                                    p Podane hasła się nie pokrywają.
                                if err_code === '11000'
                                    p Użytkownik o loginie #{login} już istnieje, proszę wpisać inny login.

                        div(class="form-group col-md-6")
                            label Login:
                            input(type="text", class="form-control", name="login", minlength="6", maxlength="32", required)
                        div(class="form-group col-md-6")
                            label Hasło:
                            input(type="password", class="form-control", name="password", minlength="6", maxlength="32", required)
                        div(class="form-group col-md-offset-6 col-md-6")
                            label Powtórz hasło:
                            input(type="password", class="form-control", name="r_password", minlength="6", maxlength="32", required)
                        div(class="form-group col-md-6")
                            label Imię:
                            input(type="text", class="form-control", name="first_name", minlength="3", maxlength="32", required)
                        div(class="form-group col-md-6")
                            label Nazwisko:
                            input(type="text", class="form-control", name="last_name", minlength="3", maxlength="32", required)
                        div(class="form-group col-md-6")
                            label Data urodzenia:
                            input(type="date", class="form-control", name="birthday", required)
                        div(class="form-group col-md-6")
                            label Płeć:
                            select(class="form-control", name="sex", required)
                                option(value="m") Mężczyzna
                                option(value="f") Kobieta
                    div(class="panel-footer text-right")
                        button(class="btn btn-primary btn-sm", type="submit") Zarejestruj